#!/usr/bin/env bash

set -e

build() {
  os=$1
  arch=$2
  arch_file=./gotestfmt/arch.go

  env CGO_ENABLED=0 GOOS=$os GOARCH=$arch go build \
    -o build/gotestfmt-$os-$arch \
    -ldflags "-X com.github/fnando/gotestfmt/gotestmt.Arch=$arch" \
    cmd/gotestfmt.go
}

rm -rf build
mkdir -p build

build linux amd64
build linux arm64
build darwin arm64
build darwin amd64
build windows 386
build windows amd64
